
<div class="container-form">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    {{ form_start(form) }}
        <h1 class="h3 mb-3">{{ title_label|default('Add medic') }}</h1>

        {{ form_row(form.medicId, {'attr' : {'class':'form-control'}}) }}
        {{ form_row(form.dose, {'attr' : {'class':'form-control', 'placeholder': 'Dose'}}) }}
        {{ form_row(form.nb_times, {'attr' : {'class':'form-control', 'placeholder': 'Per/Days'}}) }}
        {{ form_row(form.endAt, {'attr' : {'class':'form-control'}}) }}
        {{ form_row(form.comment, {'attr' : {'class':'form-control', 'placeholder': 'Comment'}}) }}

        <button class="btn btn-lg btn-primary">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>
